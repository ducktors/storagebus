{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "test": {
      "outputs": [],
      "cache": false,
      "dependsOn": []
    },
    "test:watch": {
      "outputs": [],
      "cache": false,
      "dependsOn": []
    },
    "test:ci": {
      "outputs": [],
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}
