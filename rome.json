{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "ignore": [
      "**/dist/*",
      "**/coverage/*"
    ]
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "**/dist/*",
      "**/coverage/*"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve"
    }
  }
}